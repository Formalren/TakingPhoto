<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#999999"/> <stroke android:width="4dp" android:color="#FFFFFF"/>
            <size android:width="70dp" android:height="70dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000"/> <stroke android:width="4dp" android:color="#FFFFFF"/> <size android:width="70dp" android:height="70dp"/>
        </shape>
    </item>
</selector>